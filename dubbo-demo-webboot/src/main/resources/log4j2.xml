<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <logger name="org.springframework.web" level="debug">
            <AppenderRef ref="Console"/>
        </logger>
    </Loggers>
</configuration>
